page{
  background-color: #fff;
}
.refresh-btn{
  width: 35rpx;
  height: 35rpx;
}
.title{
  font-size: 40rpx;
}
.week-list{
  position: fixed;
  left: 0;
  width: 100%;
  display:flex;
  align-items:center;
  background-color:#eee;
  height:92rpx;
  z-index: 1;
}
.now-month{
  width: 60rpx;
  display:flex;
  height: 92rpx;
  text-align: center;
  flex-direction:row;
  justify-content:center;
  align-items: center;
  font-size: 25rpx;
  color: #666666;
}
.week-item{
  width: calc(100%/7);
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.week-name{
  font-size: 30rpx;
  color: #444444;
}
.week-date{
  font-size: 24rpx;
  color:#a1a1a1;
}
.course-content{
  width:100%;
  padding-top: 92rpx;
  display: flex;
  /* align-items: center; */
}
.course-nums{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
  background-color: #f5f6f7;
}
.course-section{
  width: 60rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#000;
}
.course-time{
  /* height: 90rpx; */
  width: 60rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color:#333;
}
.course-list{
  width: 100%;
  position: relative;
}
.course-item{
  width: calc(100%/7);
  padding:1rpx;
  position:absolute;
  /* margin-bottom: 4rpx;
  border:solid 2rpx;
  border-radius:10rpx;
  border-color: rgb(255, 255, 255); */
}
.class-item_content{
  width: 100%;
  height: 100%;
  padding:10rpx;
  position:static;
  color: white;
  font-size: 25rpx;  /*将格子中的字体设置为25rpx*/
  border:solid 1rpx;
  border-radius:10rpx;
  border-color: #eee;
}
.Switch-Week_popup{
  padding: 34rpx;
}
.Switch-Week_list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 120rpx;
}
.Switch-week_item{
  width: 20%;
  padding: 10rpx;
}
.Switch-week_item-box{
  width: 100%;
  height: 60rpx;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}
.Switch-week_item-box.active{
  background-color:rgb(9, 11, 14);
  color:#eee;
  font-size: 32rpx;
  font-weight: bold;
}